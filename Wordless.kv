#:kivy 1.0.7
<Board>
    play_area: playArea
    complete: '_ _ _'
    progress: header.lheader.progress
    color: [0, .7, .7, 1]
    score: 0
    value: 0
    orientation: 'vertical'
    Header:
        id: header
    PlayArea:
        id: playArea
<Header>
    word_complete: wordComplete
    lheader: leftHeader
    orientation: 'horizontal'
    size_hint: .85, .1
    pos_hint: {'x': .05}
    LeftHeader:
        id: leftHeader
    BoxLayout:
    WordComplete:
        id: wordComplete

<LeftHeader>
    orientation: 'vertical'
    progress: progressBar
    score: scoreboard
    Score: 
        id: scoreboard
    ProgressBar:
        id: progressBar  
        value: 0
        max: 100
        
<WordComplete>
    pos_hint: {'right': .75}
    text: root.parent.parent.complete
    font_size: 30
    color: root.parent.parent.color   
    Bonus:
        id: button
        text: '+' + str(root.parent.parent.value)
        pos: root.center_x + len(root.text) * 9 - 30, root.y
        background_color: root.parent.parent.color
        color: root.parent.parent.color        
<Bonus>
        
<Score>
    Label:
        text: 'SCORE:'
        font_size: 35
    Label:
        font_size: 35
        text: str(root.parent.parent.parent.score)
<PlayArea>
    orientation: 'horizontal'
    size_hint: .9, .8
    pos_hint: {'x': .05}
    
<Column>
    orientation: 'vertical'
    size_hint_y: .9
    
<Tile>:
    lscore: letter_score
    Label:
        id: letter_score
        text: "4"
        font_size: 17
        color: 0,0.5,1,1
        size: 5,5
        pos: root.center_x + root.width/2 - 12, root.y + 8
