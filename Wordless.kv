#:kivy 1.9.0

<Board>
    # general properties
    play_area: playArea
    complete: '_ _ _'
    progress: header.lheader.progress
    level: 0
    game_timer: header.game_timer
    footer: footer
    color: [0, .7, .7, 1]
    tile_color: [1,1,1,1]
    score: 0
    value: 0 
    header: header
    seconds: 0
    displayed_seconds: 0
    tile_collector: tile_collector
    orientation: 'vertical'  
    spacing: 50,50
    Header:
        id: header
        pos_hint: {'top': 1, 'right': 0.95}
    PlayArea:
        id: playArea
    Footer:
        id: footer
        pos_hint: {'top': 0}
    Label:
        id: tile_collector
        
<Footer>
    bubble: button
    search: search
    SearchWord:
        id: search
        pos: root.parent.center_x - search.width / 2, -25
        text: root.parent._searchword
        font_size: 45
        color: [.5, .75, 1, 1]
    Bonus:      
        pos: -5000, -5000
        id: button
        text: ''
        color: [0, .7, .7, 1]
        background_color: [2,2,2,1]
        font_size: 50
<PlayArea>
    orientation: 'horizontal'
    size_hint: .9, .8
    pos_hint: {'x': .05, 'y': .065}
    
<Header>
    word_complete: wordComplete
    game_timer: gameTime
    lheader: leftHeader
    orientation: 'horizontal'
    size_hint: .9, .15
    pos_hint: {'x': .05}
    BoxLayout:
        size_hint: 0.25, 1
    LeftHeader:
        id: leftHeader
    GameTimer:
        id: gameTime
    WordComplete:
        id: wordComplete
    Button:
        text: 'Reset'
        background_color: .5,.5,.5,.5
        size_hint: 0.5, 0.5
        on_press: root.parent.reset_tiles(3)
        pos_hint: {'right': 1}

<LeftHeader>
    orientation: 'vertical'
    progress: progressBar
    score: scoreboard
    level: level_on
    Score: 
        id: scoreboard
    Level:
        id: level_on   
        pos_hint: {'x': -.12}
    ProgressBar:
        pos_hint: {'x': -.05}
        id: progressBar  
        value: 0
        max: 30

<Level>
    Label:
        text: 'LEVEL:'
        font_size: 20
        color: [.75, 0, 1, 1]
    Label:
        font_size: 25
        color: [.75, 0, 1, 1]
        text: str(root.parent.parent.parent.level)

<GameTimer>:
    seconds: 0
    displayed_seconds: 0
    orientation: 'vertical'
    Label:
        text: 'TIME LEFT:'
        font_size: 25
    Label:
        text: str(root.displayed_seconds)
        font_size: 50
        
<WordComplete>
    bubble: button
    text: root.parent.parent.complete
    font_size: max(30 - (len(root.text) / 2), 10)
    color: root.parent.parent.color   
    Bonus:      
        value_added: False
        id: button
        text: '+' + str(root.parent.parent.value)
        pos: root.center_x + len(root.text) * 8 - 30, root.center_y - 20
        color: root.parent.parent.color  
<Bonus>
    font_size: 30
    background_color: .5,.5,.5,.5

<Score>
    displayed_score: 0
    Label:
        text: 'SCORE:'
        font_size: 35
    Label:
        font_size: 40
        text: str(root.displayed_score)

    
<Column>
    orientation: 'vertical'
    size_hint_y: .9
    
<Tile>:
    lscore: 0
    font_size: 50
    Label:
        id: letter_score
        text: str(root.lscore)
        font_size: 17
        color: 0,0.5,1,1
        size: 5,5
        pos: root.center_x + root.width/2 - 12, root.y + 8
        
<ScoreDisplay@BoxLayout>
    text1: 'test'
    text2: ''
    color: 0,0,0,1 
    BoxLayout:
        orientation: 'horizontal'
        Label:
            size_hint: 0.25, 1
            pos_hint: {'right': 0.65}
            text: root.text1
            font_size: 30
            color: root.color
        Label:
            size_hint: 0.25, 1
            pos_hint: {'right': 0.35}
            text: root.text2
            font_size: 30
            color: root.color
        

<MenuScreen>
    scores: 0,0,0,0,0
    player: '','','','',''
    your_score: 0
    
    Button:
        color: 0,0,0,1
        on_press: root.manager.current = 'game' 
        background_color: 0.2,1,2,1
       
        Label:
            text: 'Your Score:'
            font_size: 60
            color: 0,1,0.5,1
            pos: root.center_x - 110, root.center_y + 200
        Label:
            text: str(root.your_score)
            font_size: 65
            color: 0,1,0.5,1
            pos: root.center_x + 110, root.center_y + 200
        Label:
            text: 'High Scores'
            font_size: 80
            color: 1,0,0.2,1
            pos: root.center_x - 70, root.center_y + 100
        Label:
            text: str(root.player[0])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x -150, root.center_y + 35
        Label:
            text: str(root.scores[0])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x +50, root.center_y + 35   
        Label:
            text: str(root.player[1])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x -150, root.center_y + 5
        Label:
            text: str(root.scores[1])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x +50, root.center_y + 5   
        Label:
            text: str(root.player[2])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x -150, root.center_y -25
        Label:
            text: str(root.scores[2])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x +50, root.center_y -25
        Label:
            text: str(root.player[3])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x -150, root.center_y - 55
        Label:
            text: str(root.scores[3])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x +50, root.center_y  - 55 
        Label:
            text: str(root.player[4])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x -150, root.center_y - 85
        Label:
            text: str(root.scores[4])
            font_size: 35
            color: 0,0,0,1
            pos: root.center_x +50, root.center_y  - 85
        Label:
            text: 'Click Anywhere to begin new Game'
            font_size: 40
            color: 1,1,1,1 
            pos: root.center_x -50, root.center_y  - 200
